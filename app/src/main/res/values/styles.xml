<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="RadioButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">.5</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:background">@drawable/selector_radio_button</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:textColor">@color/splash_button_signup</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
